acl internal {
    192.168.0.0/16;
    127.0.0.0/16;
    172.18.0.0/16;
};

options {
    forwarders {
{% for item in dns_forwarders %}
        {{ item.ip }};
{% endfor %}
    };
    allow-query { 
        internal; 
    };
};

zone "{{ dns_domain }}" IN {
    type primary;
    file "/etc/bind/{{ forward_bensemer_zone_file_name }}";
};